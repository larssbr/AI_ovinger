<ol class="breadcrumb">
    <li><a href="<%= reading_lists_path %>">Home</a></li>
    <li class="active">My Groups</li>
</ol>
<div class="page-header">
    <h1>My Groups</h1>
</div>

<div class="row">
    <%= render 'form', :form_title => 'Create New Group' %>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-primary">
            <div class="panel-heading">My Groups (<%= @groups.count %>)</div>
            <div class="panel-body">
                <% if @groups.count > 0 %>
                    <table class="table table-striped table-hover">
                        <tr>
                            <th>Name</th>
                            <th>Actions</th>
                        </tr>

                        <% @groups.each do |group| %>
                            <tr>
                                <td><%= link_to group.name , group %></td>
                                <td><%= link_to 'Destroy', group, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                            </tr>
                        <% end %>
                    </table>
                <% else %>
                    <div class="alert alert-info">You do not have any groups. Use the form above to create groups.</div>
                <% end %>
            </div>
        </div>
    </div>
</div>

