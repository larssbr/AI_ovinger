<ol class="breadcrumb">
    <li class="active">Home</li>
</ol>
<div class="page-header">
    <h1>My Reading Lists</h1>
</div>

<div class="row">
    <%= render 'form', :form_title => 'Create Reading List' %>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-primary">
            <div class="panel-heading">My Reading Lists (<%= @reading_lists.count %>)</div>
            <div class="panel-body">
                <% if @reading_lists.count > 0 %>
                    <table class="table table-striped table-hover">
                      <tr>
                        <th>Name</th>
                        <th>Papers</th>
                        <th>Actions</th>
                      </tr>

                        <% @reading_lists.each do |reading_list| %>
                          <tr>
                            <td><%= link_to reading_list.name , reading_list %></td>
                            <td><%= reading_list.paper_count %></td>
                            <td>
                                <%= link_to 'View', reading_list %> -
                                <%= link_to 'Delete', reading_list, method: :delete, data: { confirm: 'Are you sure?' }  %>
                            </td>
                          </tr>
                        <% end %>
                    </table>
                <% else %>
                    <div class="alert alert-info">You do not have any reading lists. Use the form above to create reading lists.</div>
                <% end %>
            </div>
        </div>
    </div>
</div>

<% if @shared_lists.count > 0 %>
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-primary">
            <div class="panel-heading">Reading Lists Shared with Me (<%= @shared_lists.count %>)</div>
            <div class="panel-body">
                <table class="table table-striped table-hover">
                    <tr>
                        <th>Name</th>
                        <th>Papers</th>
                        <th>Owner</th>
                    </tr>
                    <% @shared_lists.each do |shared_list| %>
                        <tr>
                            <td><%= link_to shared_list.name, shared_list %></td>
                            <td><%= shared_list.paper_count %></td>
                            <td><%= shared_list.user.name %></td>
                        </tr>
                    <% end %>
                </table>
            </div>
        </div>
    </div>
</div>
<% end %>



