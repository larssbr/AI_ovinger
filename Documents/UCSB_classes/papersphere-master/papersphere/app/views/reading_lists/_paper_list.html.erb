<% if @reading_list.papers.empty? %>
    <div class="alert alert-info">
        No papers are available in this list. Use the search tool below to locate papers
        in ACM and IEEE databases and add them to the list.
    </div>
<% else %>
    <div class="panel panel-primary">
        <div class="panel-heading">Papers (<%= @reading_list.paper_count %>)</div>
        <div class="panel-body">
            <table class="table table-striped table-hover">
                <tr>
                    <th></th>
                    <th>Title</th>
                    <th>Authors</th>
                    <th>Year</th>
                    <th>Publication</th>
                    <th></th>
                </tr>
                <%= render @reading_list.papers %>
            </table>
        </div>
    </div>
<% end %>
