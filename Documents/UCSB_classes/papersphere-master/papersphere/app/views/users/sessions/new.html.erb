
<style type="text/css">
body {
  padding-bottom: 40px;
  background-color: #f5f5f5;
}

.form-signin {
  max-width: 400px;
  padding: 19px 29px 29px;
  margin: 0 auto 20px;
  background-color: #fff;
  border: 1px solid #e5e5e5;
  -webkit-border-radius: 5px;
  -moz-border-radius: 5px;
  border-radius: 5px;
  -webkit-box-shadow: 0 1px 2px rgba(0,0,0,.05);
  -moz-box-shadow: 0 1px 2px rgba(0,0,0,.05);
  box-shadow: 0 1px 2px rgba(0,0,0,.05);
}
.form-signin .form-signin-heading,
.form-signin .checkbox {
  margin-bottom: 10px;
}
.form-signin input[type="text"],
.form-signin input[type="password"] {
  font-size: 16px;
  height: auto;
  margin-bottom: 15px;
  padding: 7px 9px;
}
.form-control{
  width: 300px;
  height: 36px;
  max-width: 300px;
  max-height: 36px;
}
.link_to{
  font-size: 13px;
  text-decoration: underline;
}

</style>
<div class="container">

  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), html: {"role" => "form"}) do |f| %>
  <div class="form-signin">
    <%= f.label :email %><br />
    <%= f.email_field :email, :autofocus => true, "class" => "form-control" %><br>
    <%= f.label :password %><br />
    <%= f.password_field :password, "class" => "form-control" %>
    <%= f.check_box :remember_me %> <%= f.label :remember_me %><br/><br/>
    <div class="row-fluid">
      <div class="span4">
        <%= f.submit "Sign in", "class" => "btn btn-primary" %>      
      </div>
    </div>
    <hr>
    <div align="center">
      <!--h4>Don't have an account yet?</h4-->
      <label>Don't have an account yet?</label>
    </div>
    <div class="row-fluid">
      <div class="span4" align="center">
        <%= link_to "Sign Up", new_user_registration_path, "class" => "link_to" %><br/>
        <label align="center" style="margin-bottom: 0px;">Or</label><br/>
        <%- if devise_mapping.omniauthable? %>
        <%- resource_class.omniauth_providers.each do |provider| %>
        <%= link_to "Sign in with #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider), "class" => "link_to"  %><br />
        <% end -%>
        <% end -%>
      </div>
    </div>
    <% end %>
</div> <!-- /container -->