<div class="page-header">
	<h2>Sign up</h2>
</div>


<div class="container">
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :name %>
    <%= f.text_field :name, :autofocus => true, "class" => "form-control" %><br></div>

  <div><%= f.label :email %>
  <%= f.email_field :email, :autofocus => true, "class" => "form-control"%></div><br />

  <div><%= f.label :password %>
  <%= f.password_field :password, "class" => "form-control" %></div><br />

  <div><%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation, "class" => "form-control" %></div><br />

  <div><%= f.submit "Sign up", :class =>  'btn btn-primary' %></div>
<% end %>
</div> <!-- /container -->