$('#update-container').html("<%=j render :partial => 'search', :content_type => 'text/html' %>")

$(document).ready(function() {
    ajaxifyPagination();
});

function ajaxifyPagination() {
    $(".pagination a").click(function() {
        $.ajax({
            type: "GET",
            url: $(this).attr("href"),
            dataType: "script"
        });
        return false;
    });
}
