<!-- Fixed navbar -->
<div class="navbar navbar-default navbar-fixed-top" role="navigation">
  <%= render partial: 'announcement' %>
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to 'LaPlaya', root_path, class: 'navbar-brand' %>
    </div>
    <div class="navbar-collapse collapse navbar-right">
      <ul class="nav navbar-nav">
        <%= nav_link 'HOME', root_path %>
        <%= nav_link 'PROJECTS', projects_path %>
        <%= nav_link 'GALLERIES', galleries_path %>
        <% if user_signed_in? %>
            <%= nav_dropdown current_user.username do %>
                <%= nav_link 'My Profile', profile_path(current_user) %>
                <%= nav_link 'Sign Out', destroy_user_session_path, method: :delete %>
            <% end %>
        <% else %>
            <%= nav_link 'Sign In / Sign Up', nil, {id: 'signin_link', class: 'empty-link', 'data-toggle' => 'modal', 'data-target' => '#registration_modal'} %>
        <% end %>
      </ul>
    </div>
    <!--/.nav-collapse -->
  </div>
  <%= render 'layouts/flashes' %>
</div>

