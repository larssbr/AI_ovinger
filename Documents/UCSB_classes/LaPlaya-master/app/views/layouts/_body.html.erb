<body <%= content_for?(:body_attributes) ? yield(:body_attributes) : '' %>>
<%= render 'header' %>
<%= content_for?(:pre_container) ? yield(:pre_container) : '' %>
<div id="whole-body" <%= 'class=announcement-margin' if current_announcement %>>
  <div id="main-body" class="<%= controller_classes %>">
    <%= yield %>
  </div>
  <%= render 'footer' %>
  <%= debug(params) if Rails.env.development? %>
</div>
<% if user_signed_in? %>
    <% if current_user.super_admin? %>
        <%= render 'application/admin_panel' %>
    <% end %>
<% else %>
    <%= render 'application/login_modal' %>
<% end %>
</body>

